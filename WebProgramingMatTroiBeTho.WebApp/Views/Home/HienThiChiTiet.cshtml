@model IEnumerable<WebProgramingMatTroiBeTho.Models.Models.SanPham.OrderDetail>

@{
    ViewBag.Title = "HienThiChiTiet";
}


<div class="row">
    <div class="col">
        <div class="container-fluid">
            <div class="card" id="TableSorterCard-1">
                <div class="card-header py-3">
                    <div class="row table-topper align-items-center">
                        <div class="col-12 col-sm-5 col-md-6 text-start" style="margin: 0px;padding: 5px 15px;">
                            <p class="text-primary m-0 fw-bold">Danh sách sản phẩm</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="table-responsive">
                            <table class="table table-striped table tablesorter" id="ipi-table">
                                <thead class="thead-dark">
                                    <tr>
                                        <th class="text-center">Hình ảnh</th>
                                        <th class="text-center">TÊN SP</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-center">Đơn giá</th>
                                        <th class="text-center filter-false sorter-false">Loại</th>
                                    </tr>
                                </thead>
                                <tbody class="text-center">
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center align-middle" style="max-height: 60px;height: 60px;"><img src="@Html.DisplayFor(modelItem => item.HinhAnh)" width="100px" height="auto" /></td>
                                            <td class="text-center align-middle" style="max-height: 60px;height: 60px;">@Html.DisplayFor(modelItem => item.TenSP)</td>
                                            <td class="text-center align-middle" style="max-height: 60px;height: 60px;">@Html.DisplayFor(modelItem => item.SoLuong)</td>
                                            <td class="text-center align-middle" style="max-height: 60px;height: 60px;">@Html.DisplayFor(modelItem => item.GiaTien)</td>
                                            <td class="text-center align-middle" style="max-height: 60px;height: 60px;">@Html.DisplayFor(modelItem => item.LoaiHang)</td>
                                        </tr>
                                    }
                                    </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

